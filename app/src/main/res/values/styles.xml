<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDLRed1</item>
        <item name="colorPrimaryDark">@color/colorDLRed1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTextPrimary">@color/colorDLTextWhite</item>
        <item name="windowBackground">@color/colorDLBackground</item>
    </style>

    <style name="DragLabs" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDLRed1</item>
        <item name="colorPrimaryDark">@color/colorDLRed1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTextPrimary">@color/colorDLTextWhite</item>
        <item name="windowBackground">@color/colorDLBackground</item>
    </style>

    <style name="DragLabsActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorDLRed1</item>
        <item name="colorPrimaryDark">@color/colorDLRed1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTextPrimary">@color/colorDLTextWhite</item>
        <item name="windowBackground">@color/colorDLBackground</item>
    </style>

    <style name="DragLabsNew" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDLBlue1</item>
        <item name="colorPrimaryDark">@color/colorDLBlue1</item>
        <item name="colorAccent">@color/colorDLBlue2</item>
        <item name="colorTextPrimary">@color/colorDLTextWhite</item>
        <item name="windowBackground">@color/colorDLGreyBG</item>
    </style>

    <style name="DragLabsActionBarNew" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorDLBlue1</item>
        <item name="colorPrimaryDark">@color/colorDLBlue1</item>
        <item name="colorAccent">@color/colorDLBlue2</item>
        <item name="colorTextPrimary">@color/colorDLTextWhite</item>
        <item name="windowBackground">@color/colorDLGreyBG</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DragLabs.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DragLabs.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DragLabsNew.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DragLabsNew.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
